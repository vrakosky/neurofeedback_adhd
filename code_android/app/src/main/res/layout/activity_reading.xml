<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reading.Reading">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/image_hot_device"
        android:layout_width="wrap_content"
        android:layout_height="204dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/hot1000_device"
        tools:layout_editor_absoluteY="-4dp" />

    <TextView
        android:id="@+id/txt_title_directions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="10dp"
        android:text="@string/txt_title_directions"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/image_hot_device" />

    <me.biubiubiu.justifytext.library.JustifyTextView
        android:id="@+id/txt_directions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:text="@string/txt_directions"
        android:textSize="11.7sp"
        android:textStyle="bold"
        android:layout_marginTop="2dp"
        android:lineSpacingMultiplier="1.1"
        android:layout_below="@+id/txt_title_directions"
        />

    <TextView
        android:id="@+id/txt_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="23dp"
        android:text="Text Title"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txt_directions" />

    <ImageView
        android:id="@+id/image_category"
        android:layout_marginTop="7dp"
        android:layout_gravity="center"
        android:layout_width="330dp"
        android:layout_height="140dp" />

    <me.biubiubiu.justifytext.library.JustifyTextView
        android:id="@+id/txt_reading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:textSize="12sp"
        android:lineSpacingMultiplier="1.1"
        />

        <Chronometer
            android:id="@+id/chronometer"
            android:textColor="@android:color/darker_gray"
            android:gravity="center_horizontal"
            android:text="00:00"
            android:textSize="36sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>
    </ScrollView>
</RelativeLayout>